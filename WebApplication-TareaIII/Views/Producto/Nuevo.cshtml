@{
    Layout = "_Layout_dos_columnas";
}
@model WebApplication_TareaIII.Models.Producto.asociar_producto
@{

    @Html.Raw(@TempData["Alert-Alert"]);
}
<form method="post" enctype="multipart/form-data" asp-controller="Producto" asp-action="Registrar">
    <div class="fila">
        <div class="columna">
            <!--<input runat="server" asp-for="Id_Producto" class="no-mostrar" id="" value="" type="number" />-->
                <div class="contenedor-valor primero">
                <label class="label-valor">Lote</label>
                <input runat="server" asp-for="Lote_Producto" class="input-valor" id="" value="" type="text" onkeyup="evaluar_vacios()" maxlength="300" required />
                </div>
                <div class="contenedor-valor">
                <label class="label-valor">Fecha Fabricacion</label>
                <input runat="server" asp-for="Fecha_Fabricacion" readonly class="box-input-valor" id="" value="" type="text" onchange="evaluar_vacios()" maxlength="300" required />
                <input class="input-date-valor" id="" value="" type="date" onchange="actualizar_fecha(0,'box-input-valor','input-date-valor',false)" required />
                </div>
                <div class="contenedor-valor">
                <label class="label-valor">Fecha Caducidad</label>
                <input runat="server" asp-for="Fecha_Caducidad" class="box-input-valor" readonly id="" value="" type="text" onchange="evaluar_vacios()" maxlength="300" required />
                <input class="input-date-valor" id="" value="" type="date" onchange="actualizar_fecha(1,'box-input-valor','input-date-valor',true)" required />
                </div>
        </div>
        <div class="columna">
                <div class="contenedor-valor primero">
                <label class="label-valor">Nombre Completo</label>
                <input runat="server"  asp-for="Nombre_Completo" class="input-valor" id="" value="" type="text" onkeyup="evaluar_vacios()" maxlength="300" required />
                </div>
                <div class="contenedor-valor">
                <label class="label-valor">Cantidad Unidades</label>
                <input runat="server" asp-for="Cantidad_Unidades" class="input-valor" id="" value="" type="number" onkeyup="evaluar_vacios()" required />
                </div>
            <div class="contenedor-valor">
                <labe class="label-valor">Información Proveedor</labe>
                <input runat="server" asp-for="Informacion_Proveedor" class="input-valor input-grande" id="" value="" type="text" onkeyup="evaluar_vacios()" maxlength="300" required />
            </div>
        </div>
    </div>
    <input class="button-to-submit" type="submit" value="Registrar" />
</form>